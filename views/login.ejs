<!-- Rendered by login-controller.js -->
<%- include('./layout.ejs') %>
<link rel="stylesheet" href="../public/styles/login.css" />
<header>
  <h1>BoxDrop</h1>
  <h2><a href="/signup">Sign Up</a></h2>
</header>
<main>
  <h1>Sign in</h1>
  <form action="/login" method="POST">
    <form action="/login" method="POST">
      <div>
        <label for="username">Username:</label>
        <input
          type="text"
          id="username"
          name="username"
          required
          aria-required="true"
          autocomplete="username"
        />
      </div>
      <div>
        <label for="password">Password:</label>
        <input
          type="password"
          id="password"
          name="password"
          required
          aria-required="true"
          autocomplete="current-password"
        />
      </div>
      <div>
        <button type="submit" aria-label="Log in">Log In</button>
      </div>
    </form>
    <% if (errors) { %>
    <ul>
      <% errors.forEach((error) => { %>
      <li><%= error %></li>
      <% }) %>
    </ul>
    <% } %>
  </form>
</main>
